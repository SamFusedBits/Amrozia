<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:drawablePadding="8dp"/>

    <!-- Section Buttons -->
    <LinearLayout
        android:id="@+id/sectionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/searchBar"
        android:padding="8dp">

        <Button
            android:id="@+id/btnTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Now"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- RecyclerView for Product Cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/sectionButtons"
        android:layout_above="@id/bottomNavBar"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:tint="@android:color/white" />

        <ImageView
            android:id="@+id/navCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:tint="@android:color/white" />

        <ImageView
            android:id="@+id/navCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:tint="@android:color/white" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:tint="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
