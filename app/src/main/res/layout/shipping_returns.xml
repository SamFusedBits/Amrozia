<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Add a Toolbar for the back button and title -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/back_arrow" />

            <TextView
                android:id="@+id/shipping_and_delivery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_and_delivery_title"
                android:textSize="@dimen/_21ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shipping_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shipping" />

                <TextView
                    android:id="@+id/shipping_charges_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_charges_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/shipping_charges_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_charges_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_time_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_delivery_time_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_time_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_delivery_time_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_method_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_method_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_method_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_method_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_tracking_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/track_delivery_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_tracking_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/track_delivery_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/cod_option_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cod_option_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/cod_option_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cod_option_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/out_of_stock_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_stock_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/out_of_stock_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_stock_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/packaging_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/packaging_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/packaging_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/packaging_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/local_taxes_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_responsibility_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/local_taxes_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_responsibility_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/track_shipments_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/track_shipments_link"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/return_policy_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/return_policy_title"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/_16sdp"/>

                <ImageView
                    android:id="@+id/rayon_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/easy_returns_image" />

                <TextView
                    android:id="@+id/return_policy_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/return_policy_question"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/return_policy_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/return_policy_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/raise_dispute_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/raise_dispute_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/raise_dispute_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/raise_dispute_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/dispute_process_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/after_dispute_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/dispute_process_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/after_dispute_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_charges_return_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_charges_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/delivery_charges_return_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_charges_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/non_returnable_items_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/non_returnable_items_question"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/non_returnable_items_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/non_returnable_items_answer"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:textColor="@color/black"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/contact_support_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:text="@string/contact_support_email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textAllCaps="false"
                    android:background="@drawable/social_button_background_login"
                    android:backgroundTint="@color/purple"
                    android:textStyle="bold"/>

                <!-- Copyright Section -->
                <TextView
                    android:id="@+id/copyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textAlignment="center"
                    android:padding="@dimen/_16sdp"
                    android:textColor="@color/pink" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
