<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_above="@+id/navigation_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/topImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/arc_3"
                        android:layout_alignParentBottom="true" />

                    <!-- Feedback Information Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_19ssp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginBottom="8dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/_49sdp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/write"
                        android:layout_alignTop="@id/userNameTextView"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_28sdp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/userEmailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#747679" />

                <!-- Notification Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_32sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true"
                        android:src="@drawable/btn_1_notification" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notification"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_16sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />
                </LinearLayout>

                <!-- Calendar Row -->

                <!-- Gallery Row -->

                <!-- My Playlist Row -->
                <LinearLayout
                    android:id="@+id/giftCardsRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_32sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true"
                        android:src="@drawable/btn_2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/_16sdp"
                        android:text="Gift Cards"
                        android:textColor="#000000"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true"
                        android:src="@drawable/arrow" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/returnsAndRefundsRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_4_profile"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Returns &amp; Refunds"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_16sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />
                </LinearLayout>

                <!-- Share Row -->
                <LinearLayout
                    android:id="@+id/shareRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_32sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_5_share"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_16sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />
                </LinearLayout>

                <!-- Logout Row -->
                <LinearLayout
                    android:id="@+id/logoutRow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_32sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_6"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Logout"
                        android:textSize="@dimen/_17ssp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_16sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
