<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/product_management_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_management_layout_icon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/product_management_icon" />

                <TextView
                    android:id="@+id/product_management_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Product Management"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/manage_orders_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/manage_orders_layout_icon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/order_management_icon" />

                <TextView
                    android:id="@+id/manage_orders_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Order Management"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
