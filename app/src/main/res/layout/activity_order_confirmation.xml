<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/orderPlacedIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/order_confirmation_image"
        android:layout_marginBottom="@dimen/_24sdp"/>

    <TextView
        android:id="@+id/orderPlacedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for shopping with us! Your order has been placed. You'll receive a confirmation mail shortly."
        android:textSize="@dimen/_14ssp"
        android:textColor="@android:color/black"
        android:gravity="center"/>

</LinearLayout>
